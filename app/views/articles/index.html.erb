<h1>
  Listing all articles
</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |a| %>
  <tr>
    <td><%= a.id %></td>
    <td><%= a.title %></td>
    <td><%= a.description %></td>
    <td><%= link_to "show", article_path(a) %></td>
    <td><%= link_to "edit", edit_article_path(a) %></td>
    <td><%= link_to "delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>
<p>
  <%= link_to "Create a new article", new_article_path %>
</p>

<p>
  <%= link_to "Home", root_path %>
</p>
